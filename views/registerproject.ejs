        </div>
        <img src="../images/crutechLogo.jpg" alt="CRUTECH LOGO">
    </nav>
    <div class="container">
        <h4>Enter the required information below to registered for Computer Science final year project course</h4>
        <!-- Error messages here -->
        <% if(error != ''){%>
            <div class='container alert alert-danger alert-dismissible' style="width: fit-content; height: fit-content; font-size: large;">
                <%-error %>
                    <a href="#" class="close" id="close" data-dismiss="alert" aria-label="close" style="margin-left: 20px; margin-right: 0;">&times;</a>
            </div>
            <%}%>
                <!-- success messages for contact form -->
                <% if(msg != ''){%>
                    <div class='container alert alert-warning alert-dismissible' style="width: fit-content; height: fit-content; font-size: large;">
                        <%-msg %>
                            <a href="#" class="close" id="close" data-dismiss="alert" aria-label="close" style="margin-left: 20px;">&times;</a>
                    </div>
                    <%}%>
                        <div class="form-group">
                            <form action="/registerproject" method="POST" enctype="multipart/form-data" id="projectForm">
                                <div class="form-control">
                                    <label for="regNumber">Reg. Number</label>
                                    <input type="text" name="regNumber" id="regNumber" value="<%= regNumber %>" required>
                                </div>
                                <div class="form-control">
                                    <label for="firstName">First Name</label>
                                    <input type="text" name="firstName" id="firstName" value="<%= firstName %>" required>
                                </div>
                                <div class="form-control">
                                    <label for="Surname">Surname</label>
                                    <input type="text" name="surname" id="surname" value="<%= surname %>" required>
                                </div>
                                <div class="form-control">
                                    <label for="otherName">Other Name</label>
                                    <input type="text" name="otherName" id="otherName" value="<%= otherName %>">
                                </div>
                                <div class="form-control">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" id="email" value="<%= email %>" required>
                                </div>
                                <div class="form-control">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="text" name="phoneNumber" id="phoneNumber" value="<%= phoneNumber %>" required>
                                </div>
                                <div>
                                    <h6>Upload your passport (max_size: 200kb)</h6>
                                </div>
                                <div class="form-control">
                                    <span style="font-size: x-large;">Passport</span>
                                    <input type="file" name="myImage">

                                </div>
                                <div class="form-control">

                                    <input type="submit" value="Register">
                                </div>
                            </form>

                        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <div class="container">


    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <!-- <script src="../script.js"></script> -->
</body>

</html>